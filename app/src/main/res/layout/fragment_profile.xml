<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/profile"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/txt_email"
        android:layout_width="240dp"
        android:layout_height="39dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="394dp"
        android:layout_marginEnd="98dp"
        android:background="@color/gradEnd"
        android:drawablePadding="10dp"
        android:hint=""
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/black"
        android:textColorHint="@color/texthint"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/DZZ"
        android:layout_width="240dp"
        android:layout_height="39dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="98dp"
        android:background="@color/gradEnd"
        android:drawablePadding="10dp"
        android:hint=""
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/black"
        android:textColorHint="@color/texthint"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_eail" />

    <EditText
        android:id="@+id/txt_eail"
        android:layout_width="240dp"
        android:layout_height="39dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="98dp"
        android:background="@color/gradEnd"
        android:drawablePadding="10dp"
        android:hint=""
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/black"
        android:textColorHint="@color/texthint"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_email" />

    <EditText
        android:id="@+id/txtemail"
        android:layout_width="240dp"
        android:layout_height="39dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="98dp"
        android:background="@color/gradEnd"
        android:drawablePadding="10dp"
        android:hint=""
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/black"
        android:textColorHint="@color/texthint"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DZZ" />

    <EditText
        android:id="@+id/tt_email"
        android:layout_width="240dp"
        android:layout_height="39dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="98dp"
        android:background="@color/gradEnd"
        android:drawablePadding="10dp"
        android:hint=""
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/black"
        android:textColorHint="@color/texthint"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtemail" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="136dp"
        android:backgroundTint="#B1D8B7"
        android:text="Update"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tt_email" />


</androidx.constraintlayout.widget.ConstraintLayout>